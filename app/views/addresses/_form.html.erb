<%= form_for @address, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :street_number, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :street_number, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :street_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :street_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :latitude, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :latitude, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :longitude, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :longitude, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :gmaps, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :gmaps, :class => 'check_box' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :zip_code, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :zip_code, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :neighborhood_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :neighborhood_id, :class => 'number_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                addresses_path, :class => 'btn' %>
  </div>
<% end %>
