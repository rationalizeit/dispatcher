<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @task.name %>
</p>

<p>
  <b>Description:</b>
  <%= @task.description %>
</p>

<p>
  <b>Person:</b>
  <%= link_to_name @task.person %>
</p>

<p>
  <b>Unit:</b>
  <%= link_to_name @task.unit %>
  <%= link_to_name @task.address %>
</p>
<%= gmaps(:markers => {:data => @task.address.to_gmaps4rails}, :map_options => {:auto_zoom => false, :zoom => 14, :detect_location => true}) %>

<p>
  <b>Scheduled start:</b>
  <%= @task.scheduled_start %>
</p>

<p>
  <b>Scheduled end:</b>
  <%= @task.scheduled_end %>
</p>

<p>
  <b>Actual start:</b>
  <%= @task.actual_start %>
</p>

<p>
  <b>Actual end:</b>
  <%= @task.actual_end %>
</p>


<%= link_to 'Edit', edit_task_path(@task) %> |
<%= link_to 'Back', tasks_path %>
